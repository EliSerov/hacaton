# Telegram
TELEGRAM_BOT_TOKEN=CHANGE_ME

# Access control (comma-separated Telegram user ids). Empty => allow everyone.
ALLOWED_TELEGRAM_IDS=

# Service-to-service auth (bot -> rag)
SERVICE_API_KEY=CHANGE_ME

# RabbitMQ
AMQP_URL=amqp://rag_user:rag_pass@rabbitmq:5672/rag_vhost
RAG_RPC_EXCHANGE=rag.rpc
RAG_SEARCH_ROUTING_KEY=search
RAG_RECOMMEND_ROUTING_KEY=recommend
RAG_QUIZ_ROUTING_KEY=quiz

# Qdrant
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION=tech_media_chunks

# Embeddings
EMBED_MODEL=intfloat/multilingual-e5-small
EMBED_BATCH_SIZE=32

# LLM (LLama.cpp / GGUF)
LLM_MODEL_PATH=/models/model.gguf
LLM_N_CTX=4096
LLM_MAX_TOKENS=400
LLM_TEMPERATURE=0.2
LLM_TOP_P=0.95
LLM_N_GPU_LAYERS=35

# Indexer
CSV_INPUT_DIR=/data
CHUNK_SIZE=900
CHUNK_OVERLAP=150
UPSERT_BATCH_SIZE=256

# Logging
LOG_LEVEL=INFO
